{
  "manifest_version": 3,
  "name": "Coursera Universal Subtitles: All-Language Coursera Overlay",
  "version": "2.1",
  "description": "Overlay translated Coursera subtitles directly on the video player for a focused learning experience.",
  "author": "STech - Nam Hai",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.coursera.org/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://www.coursera.org/*"],
  "action": {
    "default_title": "Coursera Universal Subtitles",
    "default_popup": "popup.html"
  }
}
